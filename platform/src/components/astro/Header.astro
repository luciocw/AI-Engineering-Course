---
import { url } from '@/lib/url';

type Props = {
  variant?: 'default' | 'lesson';
};

const { variant = 'default' } = Astro.props;
const isLesson = variant === 'lesson';
---

<header
  id="site-header"
  class:list={[
    'fixed top-0 left-0 right-0 z-50 transition-all',
    isLesson ? 'bg-bg/90 backdrop-blur-xl border-b border-border' : '',
  ]}
  data-variant={variant}
>
  <nav class="mx-auto max-w-7xl px-6 h-16 flex items-center justify-between">
    <!-- Wordmark -->
    <a href={url('/')} class="flex items-center gap-2 group">
      <div class="w-8 h-8 rounded-lg bg-accent/10 border border-accent/20 flex items-center justify-center group-hover:bg-accent/20 transition-colors duration-(--duration-medium)">
        <span class="text-accent font-bold text-sm font-mono">&lt;/&gt;</span>
      </div>
      <span class="font-display font-semibold text-lg tracking-tight text-text">
        AI Engineering
      </span>
    </a>

    <!-- Nav links -->
    <div class="hidden md:flex items-center gap-8">
      <a
        href={url('/day-1')}
        class="text-sm text-text-secondary hover:text-text transition-colors duration-(--duration-fast)"
      >
        Curriculum
      </a>
      <a
        href="#pricing"
        class="text-sm text-text-secondary hover:text-text transition-colors duration-(--duration-fast)"
      >
        Pricing
      </a>
      <a
        href="https://github.com/luciocw/AI-Engineering-Course"
        target="_blank"
        rel="noopener noreferrer"
        class="text-sm text-text-secondary hover:text-text transition-colors duration-(--duration-fast) flex items-center gap-1.5"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
        </svg>
        GitHub
      </a>
    </div>

    <!-- Auth button -->
    <a
      href={url('/login')}
      class="inline-flex items-center gap-2 px-5 py-2 text-sm font-medium rounded-full bg-accent/10 text-accent border border-accent/20 hover:bg-accent/20 hover:border-accent/30 transition-all duration-(--duration-medium)"
    >
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
      </svg>
      Log in with GitHub
    </a>
  </nav>
</header>

<script>
  const header = document.getElementById('site-header');
  if (header && header.dataset.variant !== 'lesson') {
    const onScroll = () => {
      if (window.scrollY > 50) {
        header.classList.add('bg-bg/90', 'backdrop-blur-xl', 'border-b', 'border-border');
      } else {
        header.classList.remove('bg-bg/90', 'backdrop-blur-xl', 'border-b', 'border-border');
      }
    };
    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();
  }
</script>
